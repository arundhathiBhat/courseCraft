<div class="row">
    {{#if courseDetails.length}}
        {{#each courseDetails}}
        <div class="col-md-3 mb-4">
            <div class="course-card" data-course-id="{{this.courseID}}">
                <div class="card-img-container">
                    <img src="{{this.courseImagePath}}" class="card-img-top" alt="Course Image">
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{this.courseTitle}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    {{else}}
        <div class="col-12">
            <p>No courses found.</p>
        </div>
    {{/if}}
</div>
