<div class="container mt-5">
    <div class="row">
        <!-- Sidebar with Filters -->
        <aside class="col-lg-3 mb-4 mb-lg-0">
            <div class="sidebar">
                <h4>Filters</h4>
                <hr>
                <!-- Category Filter -->
                <div class="filter-section">
                    <h5>Categories</h5>
                    <ul class="list-unstyled">
                        {{#each courseCatDetails}}
                        <li>
                            <input type="checkbox" name="category" id="category{{@key}}" value="{{this.categoryID}}">
                            <label for="category{{@key}}">{{this.categoryName}}</label>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <!-- Module Filter -->
                <div class="filter-section">
                    <h5>Modules</h5>
                    <ul class="list-unstyled">
                        <li>
                            <input type="checkbox" name="module" id="module0to4" value="0-4">
                            <label for="module0to4">0-4 Modules</label>
                        </li>
                        <li>
                            <input type="checkbox" name="module" id="module5to9" value="5-9">
                            <label for="module5to9">5-9 Modules</label>
                        </li>
                        <li>
                            <input type="checkbox" name="module" id="module10plus" value="10">
                            <label for="module10plus">10+ Modules</label>
                        </li>
                    </ul>
                </div>
                <!-- Clear Filters Button -->
                <button class="btn btn-secondary btn-dark" id="clearFiltersButton">Clear Filters</button>
            </div>
        </aside>

        <!-- Main Content - Course Cards -->
        <div class="col-lg-9">
            <div class="row" id="coursesContainer">
                <!-- Course Card Example (Repeat for each course) -->
                {{#each courseCatDetails}}
                {{#if courses.length}}
                {{#each courses}}
                <div class="col-md-4 mb-4 course-card" data-course-id="{{this.courseID}}" data-category-id="{{../categoryID}}" data-module-count="{{this.moduleCount}}">
                    <div class="card">
                        <div class="card-img-container">
                            <img src="{{this.courseImagePath}}" class="card-img-top" alt="Course Image">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            {{#if this.enrollment}}
                                {{#if (eq this.enrollment.status 1)}}
                                    {{#if (eq this.enrollment.progress 100)}}
                                        <button class="btn btn-success btn-sm" style="background-color: #7a51d2;" data-enrollment-id="{{this.enrollment.enrollmentID}}"  id="certDownload">Download Certificate</button>
                                    {{else}}
                                        <button class="btn btn-primary btn-sm" style="background-color: #7a51d2;" data-enrollment-id="{{this.enrollment.enrollmentID}}">Continue Learning</button>
                                    {{/if}}
                                {{else}}
                                    <button class="btn btn-primary btn-sm" style="background-color: #7a51d2;">View Details</button>
                                {{/if}}
                            {{else}}
                                <button class="btn btn-primary btn-sm" style="background-color: #7a51d2;">View Details</button>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/each}}
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>
