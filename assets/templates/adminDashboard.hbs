<main id="main" class="main">
    <div class="pagetitle">
        <h1>{{pagetitle}}</h1>
    </div>
    <section class="section dashboard">
        <div class="row">
            <!-- right side columns -->
            <div class="col-lg-12">
                <div class="row">
                    {{#each cards}}
                    <div class="col-xxl-2 col-md-4">
                        <div class="card info-card {{this.cardType}}-card">
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi {{this.icon}}"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h3>{{lookup ../courseDetails.VALUES @index}}</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div><!-- end row inside col-lg-12 -->
            </div><!-- end col-lg-12 -->
        </div><!-- end row inside section.dashboard -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Course Summary</h5>
                            <!-- Table with stripped rows -->
                            <table id="courseSummaryTable" class="table datatable">
                                <thead>
                                    <tr>
                                        <th>Course Name</th>
                                        <th>Category Name</th>
                                        <th>Created At</th>
                                        <th>No. of Users Enrolled</th>
                                        <th>Certified</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#if courseDetails.COURSESUMMARY.length}}
                                        {{#each courseDetails.COURSESUMMARY}}
                                        <tr>
                                            <td>
                                                {{#if (eqStrict DELETED 1)}}
                                                <a href="./index.cfm?action=courseDetail&courseId={{COURSEID}}">{{COURSETITLE}}</a>
                                                {{else}}
                                                <a class="notAvailable">{{COURSETITLE}}</a>
                                                {{/if}}
                                            </td>
                                            <td>{{CATEGORYNAME}}</td>
                                            <td>{{COURSECREATEDDATE}}</td>
                                            <td>{{NUMBEROFENROLLMENTS}}</td>
                                            <td>{{NUMBEROFCERTIFIED}}</td>
                                        </tr>
                                        {{/each}}
                                    {{else}}
                                        <tr>
                                            <td colspan="4" class="text-center">No entries available</td>
                                        </tr>
                                    {{/if}}
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
</main>
